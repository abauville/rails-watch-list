<% trash_can = sanitize "<i class='far fa-trash-alt'></i>" %>
<div class="card-movie">
  <img src=<%= movie.poster_url %> />
  <div class="card-movie-infos">
    <div>
      <div class="d-flex justify-content-between">
        <h2><%= movie.title %></h2>
        <h2><%= link_to trash_can, bookmark_path(@list.bookmarks[ind]), method: :delete %></h2>
      </div>
      <p><%= movie.overview %></p>
    </div>
  </div>
  <div class="card-movie-rating">
    <p><strong><%= movie.rating %></strong></p>
  </div>
</div>
