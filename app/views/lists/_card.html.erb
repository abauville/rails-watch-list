<% trash_can = sanitize "<i class='far fa-trash-alt'></i>" %>
<div class="card-trip">
  <img src=<%= movie.poster_url %> />
  <div class="card-trip-infos">
    <div>
      <div class="d-flex justify-content-between">
        <h2><%= movie.title %></h2>
        <h2 class="card-trip-pricing"><%= link_to trash_can, bookmark_path(@list.bookmarks[ind]), method: :delete %></h2>
      </div>
      <p><%= movie.overview %></p>
    </div>

  </div>
</div>
